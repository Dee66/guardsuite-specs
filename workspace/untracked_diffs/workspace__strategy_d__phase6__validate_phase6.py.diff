+#!/usr/bin/env python3
+import yaml, sys
+from pathlib import Path
+from datetime import datetime, timezone
+
+ROOT = Path(__file__).resolve().parents[3]
+SCHEMA_PATH = ROOT / 'schemas' / 'product_schema.yml'
+OUT_PATH = ROOT / 'workspace' / 'strategy_d' / 'phase6' / 'metadata_validation_report.md'
+OUT_PATH.parent.mkdir(parents=True, exist_ok=True)
+
+products = [
+    'vectorscan','vectorguard','computescan','computeguard','pipelinescan','pipelineguard',
+    'guardboard','guardscore','guardsuite-core','guardsuite_master_spec','guardsuite-specs',
+    'guardsuite-template','playground'
+]
+
+try:
+    schema = yaml.safe_load(SCHEMA_PATH.read_text(encoding='utf-8'))
+except Exception as e:
+    print('ERROR: Unable to load schema', SCHEMA_PATH, e, file=sys.stderr)
+    sys.exit(2)
+
+properties = schema.get('properties', {}) or {}
+required = schema.get('required', []) or []
+
+pytype_map = {
+    'string': str,
+    'integer': int,
+    'number': (int, float),
+    'boolean': bool,
+    'array': list,
+    'object': dict,
+    'mapping': dict,
+}
+
+report_lines = []
+now = datetime.now(timezone.utc).isoformat()
+report_lines.append('# Strategy-D Phase 6: Metadata Conformance Validation Report')
+report_lines.append('')
+report_lines.append(f'- Generated: {now}')
+report_lines.append(f"- Canonical schema: `{SCHEMA_PATH.relative_to(ROOT)}`")
+report_lines.append('')
+report_lines.append('## Summary')
+report_lines.append('')
+summary_counts = {'products_checked': 0, 'missing_metadata_file': 0, 'products_with_issues': 0}
+per_product = []
+
+for prod in products:
+    summary_counts['products_checked'] += 1
+    meta_path = ROOT / 'products' / prod / 'metadata' / 'product.yml'
+    prod_report = {'product': prod, 'exists': meta_path.exists(), 'issues': []}
+    if not meta_path.exists():
+        summary_counts['missing_metadata_file'] += 1
+        prod_report['issues'].append({'severity': 'required/missing', 'type': 'missing-file', 'detail': f'`{meta_path.relative_to(ROOT)}` not found'})
+        per_product.append(prod_report)
+        continue
+    try:
+        data = yaml.safe_load(meta_path.read_text(encoding='utf-8'))
+        if data is None:
+            data = {}
+        if not isinstance(data, dict):
+            prod_report['issues'].append({'severity': 'invalid-type', 'type': 'root-not-mapping', 'detail': 'metadata root is not a mapping/object'})
+            per_product.append(prod_report)
+            summary_counts['products_with_issues'] += 1
+            continue
+    except Exception as e:
+        prod_report['issues'].append({'severity': 'required/missing', 'type': 'parse-error', 'detail': str(e)})
+        per_product.append(prod_report)
+        summary_counts['products_with_issues'] += 1
+        continue
+    # Required
+    for req in sorted(required):
+        if req not in data:
+            prod_report['issues'].append({'severity': 'required/missing', 'type': 'missing-field', 'field': req, 'detail': f'required field `{req}` missing'})
+    # Optional missing
+    optional_fields = sorted(k for k in properties.keys() if k not in required)
+    for opt in optional_fields:
+        if opt not in data:
+            prod_report['issues'].append({'severity': 'optional/missing', 'type': 'missing-field-optional', 'field': opt, 'detail': f'optional field `{opt}` missing'})
+    # Extraneous
+    for key in sorted(data.keys()):
+        if key not in properties:
+            prod_report['issues'].append({'severity': 'extraneous', 'type': 'extraneous-field', 'field': key, 'detail': f'field `{key}` not defined in canonical schema'})
+    # Type checks
+    for key in sorted(data.keys()):
+        if key in properties:
+            exp = properties[key]
+            val = data[key]
+            exp_type = exp.get('type') if isinstance(exp, dict) else (exp if isinstance(exp, str) else None)
+            if exp_type == 'array':
+                if not isinstance(val, list):
+                    prod_report['issues'].append({'severity': 'invalid-type', 'type': 'invalid-type', 'field': key, 'detail': f'expected array for `{key}`, got {type(val).__name__}'})
+                else:
+                    items_schema = exp.get('items') if isinstance(exp, dict) else None
+                    if items_schema and isinstance(items_schema, dict):
+                        item_type = items_schema.get('type')
+                        if item_type in pytype_map:
+                            for i, item in enumerate(val):
+                                if not isinstance(item, pytype_map[item_type]):
+                                    prod_report['issues'].append({'severity': 'invalid-type', 'type': 'invalid-item-type', 'field': key, 'detail': f'item {i} in `{key}` expected {item_type}, got {type(item).__name__}'})
+            else:
+                if exp_type in pytype_map:
+                    if not isinstance(val, pytype_map[exp_type]):
+                        prod_report['issues'].append({'severity': 'invalid-type', 'type': 'invalid-type', 'field': key, 'detail': f'expected {exp_type} for `{key}`, got {type(val).__name__}'})
+    if prod_report['issues']:
+        summary_counts['products_with_issues'] += 1
+    per_product.append(prod_report)
+
+# Build report
+report_lines.append(f"- Products checked: {summary_counts['products_checked']}")
+report_lines.append(f"- Missing metadata files: {summary_counts['missing_metadata_file']}")
+report_lines.append(f"- Products with issues: {summary_counts['products_with_issues']}")
+report_lines.append('')
+report_lines.append('## Findings (per product)')
+report_lines.append('')
+for pr in per_product:
+    report_lines.append(f"### {pr['product']}")
+    report_lines.append('')
+    report_lines.append(f"- Metadata present: {'yes' if pr['exists'] else 'no'}")
+    if not pr['exists']:
+        report_lines.append('')
+        continue
+    issues = pr['issues']
+    if not issues:
+        report_lines.append('- Issues: none (conforms)')
+        report_lines.append('')
+        continue
+    report_lines.append('| Severity | Type | Field | Detail |')
+    report_lines.append('| --- | --- | --- | --- |')
+    issues_sorted = sorted(issues, key=lambda x: (x.get('severity',''), x.get('type',''), x.get('field') or ''))
+    for it in issues_sorted:
+        sev = it.get('severity')
+        typ = it.get('type')
+        fld = it.get('field','')
+        detail = it.get('detail','')
+        report_lines.append(f"| {sev} | {typ} | `{fld}` | {detail} |")
+    report_lines.append('')
+
+# Aggregate summary by severity
+agg = {}
+for pr in per_product:
+    for it in pr['issues']:
+        sev = it.get('severity')
+        agg[sev] = agg.get(sev,0) + 1
+
+report_lines.append('## Aggregate Summary')
+report_lines.append('')
+report_lines.append('| Severity classification | Count |')
+report_lines.append('| --- | ---: |')
+for sev in sorted(agg.keys()):
+    report_lines.append(f'| {sev} | {agg[sev]} |')
+report_lines.append('')
+
+OUT_PATH.write_text('\n'.join(report_lines)+"\n", encoding='utf-8')
+print('WROTE', OUT_PATH)
